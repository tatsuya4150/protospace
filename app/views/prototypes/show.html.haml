.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media-left
        - if @user.avatar?
          = link_to image_tag(@user.avatar, {class:'media-object', alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64",style: "width: 64px; height: 64px;"})
        - else
          = link_to image_tag("data:image/svg+xml;base64,", {class:'media-object', alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64",style: "width: 64px; height: 64px;"}), user_path
      .media-body
        %h4#top-aligned-media.media-heading
          = "#{@prototype.title}"
        .proto-user
          = link_to "by #{@user.name}", user_path(@user.id)
          %span.degree
            = "#{@user.works}"
          %span.degree
            = "#{@user.profile}"


    .col-md-6.text-right
      #like-button
        = render partial: 'like', locals: { prototype: @prototype }
  .row
    .col-md-9
      = image_tag(@prototype.images.main.first.image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.images.sub.each do |prototype|
          %li.list-group-item
            = image_tag(prototype.image, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
    .col-md-8
      = render partial: "comment", collection: @comments

      = form_for [@prototype, @comment], class: 'form-inline', remote: true do |f|

        %h4 Write a comment
        .row
          .form-group.col-md-10
            = f.text_area :text, placeholder: "Your comments", rows: "3", class: "form-control", id: 'js-text-area'

          .form-group.col-md-2
            = f.submit 'Comment', class: 'btn btn-primary'


