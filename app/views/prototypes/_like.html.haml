- if user_signed_in?
  - if prototype.liked_by(current_user)
    = button_to prototype_like_path(prototype.id, current_user), method: :delete, class: 'btn btn-default', remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype.id, current_user), method: :post, class:'btn btn-default', remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      = prototype.likes_count
- else
  = button_tag class: 'btn btn-default' do
    = image_tag("icon_heart.svg")
    LIKE
    =prototype.likes_count
